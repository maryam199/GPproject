<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompleteDietPlanScreen">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="67dp"
        android:layout_height="736dp"
        android:background="@drawable/side_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home2"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/main_toolbar"
        app:layout_constraintTop_toTopOf="@id/main_toolbar"
        app:layout_constraintEnd_toEndOf="@id/main_toolbar"

        ></ImageButton>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toEndOf="@id/main_toolbar"
app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
android:layout_marginRight="200dp"
        android:layout_marginTop="20sp"

        ></ProgressBar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="5%"
        android:textColor="@color/black"
app:layout_constraintStart_toStartOf="@id/progress_bar"
        app:layout_constraintTop_toTopOf="@id/progress_bar"
        app:layout_constraintBottom_toBottomOf="@id/progress_bar"
        app:layout_constraintEnd_toEndOf="@id/progress_bar"
        ></TextView>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="عمل رائع !"
        android:textSize="30dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/progress_bar"
        app:layout_constraintTop_toTopOf="@id/progress_bar"
        app:layout_constraintBottom_toBottomOf="@id/progress_bar"
        android:layout_marginBottom="40dp"
        app:layout_constraintEnd_toEndOf="@id/text2"
        ></TextView>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="أنت أقرب ب5% للوصول"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintStart_toEndOf="@id/progress_bar"
app:layout_constraintEnd_toEndOf="parent"
        ></TextView>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="إلى هدفك."
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/text2"
app:layout_constraintEnd_toEndOf="@id/text2"        ></TextView>

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="خطتي الغذائية الكاملة:"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
       app:layout_constraintTop_toBottomOf="@+id/text3"
        app:layout_constraintEnd_toEndOf="@id/text3"
        android:layout_marginTop="50dp"

            ></TextView>

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="شهر نوفمبر:"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text4"
        app:layout_constraintEnd_toEndOf="@id/text4"
android:layout_marginTop="20dp"
        ></TextView>

<ImageButton
    android:id="@+id/square1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/square_plan"
    app:layout_constraintTop_toBottomOf="@id/text5"
    app:layout_constraintEnd_toEndOf="@id/text5"
android:layout_marginTop="10dp"
    ></ImageButton>

    <ImageButton
        android:id="@+id/square2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/square_plan"
      app:layout_constraintEnd_toStartOf="@id/square1"
        app:layout_constraintBottom_toBottomOf="@id/square1"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        ></ImageButton>

    <ImageButton
        android:id="@+id/square3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/square_plan"
        app:layout_constraintEnd_toStartOf="@id/square2"
        app:layout_constraintBottom_toBottomOf="@id/square1"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        ></ImageButton>

    <ImageButton
        android:id="@+id/square4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/square_plan"
        app:layout_constraintTop_toBottomOf="@id/square1"
        app:layout_constraintEnd_toEndOf="@id/square1"
        android:layout_marginTop="10dp"
        ></ImageButton>

    <ImageButton
        android:id="@+id/square5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/square_plan"
        app:layout_constraintEnd_toStartOf="@id/square4"
        app:layout_constraintBottom_toBottomOf="@id/square4"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        ></ImageButton>

    <ImageButton
        android:id="@+id/square6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/square_plan"
        app:layout_constraintEnd_toStartOf="@id/square5"
        app:layout_constraintBottom_toBottomOf="@id/square5"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        ></ImageButton>

    <ImageButton
        android:id="@+id/square7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/square_plan"
        app:layout_constraintTop_toBottomOf="@id/square4"
        app:layout_constraintEnd_toEndOf="@id/square1"
        android:layout_marginTop="10dp"
        ></ImageButton>

    <ImageButton
        android:id="@+id/square8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/square_plan"
        app:layout_constraintEnd_toStartOf="@id/square7"
        app:layout_constraintBottom_toBottomOf="@id/square7"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        ></ImageButton>

    <ImageButton
        android:id="@+id/square9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/square_plan"
        app:layout_constraintEnd_toStartOf="@id/square8"
        app:layout_constraintBottom_toBottomOf="@id/square8"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        ></ImageButton>

    <ImageButton
        android:id="@+id/square10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/square_plan"
        app:layout_constraintTop_toBottomOf="@id/square8"
        app:layout_constraintEnd_toEndOf="@id/square1"
        android:layout_marginTop="10dp"
        ></ImageButton>

    <ImageButton
        android:id="@+id/square11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/square_plan"
        app:layout_constraintEnd_toStartOf="@id/square10"
        app:layout_constraintBottom_toBottomOf="@id/square10"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        ></ImageButton>

    <ImageButton
        android:id="@+id/square12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/square_plan"
        app:layout_constraintEnd_toStartOf="@id/square11"
        app:layout_constraintBottom_toBottomOf="@id/square11"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        ></ImageButton>

    <ImageButton
        android:id="@+id/square13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/square_plan"
        app:layout_constraintTop_toBottomOf="@id/square10"
        app:layout_constraintEnd_toEndOf="@id/square10"
        android:layout_marginTop="10dp"
        ></ImageButton>

    <ImageButton
        android:id="@+id/square14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/square_plan"
        app:layout_constraintEnd_toStartOf="@id/square13"
        app:layout_constraintBottom_toBottomOf="@id/square13"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        ></ImageButton>

    <ImageButton
        android:id="@+id/square15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/square_plan"
        app:layout_constraintEnd_toStartOf="@id/square14"
        app:layout_constraintBottom_toBottomOf="@id/square14"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        ></ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>

